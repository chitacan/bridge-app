<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/BridgeActionBar</item>
        <item name="android:actionMenuTextColor">@color/actionbar_textcolor</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:textAppearanceListItem">@style/primaryText</item>
        <item name="android:textAppearanceSmall">@style/secondaryText</item>
    </style>

    <!-- ActionBar styles -->
    <style name="BridgeActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="primaryText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="secondaryText" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="lvStatusHdrItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/lvHeadingTextSize</item>
        <item name="android:paddingLeft">@dimen/lvHeadingPaddingLeft</item>
    </style>

    <style name="lvStatusItem">
        <item name="android:layout_height">@dimen/lvStatusItemHeight</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="lvClientItem">
        <item name="android:layout_height">@dimen/lvClientItemHeight</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="listViewPrimaryDetail">
        <item name="android:paddingLeft">@dimen/lvPrimaryPaddingLeft</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/lvPrimaryTextSize</item>
    </style>

    <style name="listViewSecondaryDetail">
        <item name="android:paddingLeft">@dimen/lvSecondaryPaddingLeft</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/lvSecondaryTextSize</item>
    </style>

    <style name="listViewVerticalDivider">
        <item name="android:layout_marginTop">@dimen/lvDividerMargin</item>
        <item name="android:layout_marginBottom">@dimen/lvDividerMargin</item>
        <item name="android:layout_width">@dimen/lvDividerWidth</item>
        <item name="android:background">@color/lvDividerColor</item>
    </style>

    <style name="listViewItemButtonStyle">
        <item name="android:layout_width">@dimen/lvStatusItemHeight</item>
        <item name="android:layout_height">@dimen/lvStatusItemHeight</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="listViewHeaderItemButtonStyle">
        <item name="android:layout_width">@dimen/lvStatusItemHeight</item>
        <item name="android:layout_height">@dimen/lvStatusItemHeight</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
