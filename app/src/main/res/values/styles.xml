<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/BridgeActionBar</item>
        <item name="android:actionMenuTextColor">@color/actionbar_textcolor</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:textAppearanceListItem">@style/primaryText</item>
        <item name="android:textAppearanceSmall">@style/secondaryText</item>
    </style>

    <!-- ActionBar styles -->
    <style name="BridgeActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="primaryText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="secondaryText" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
